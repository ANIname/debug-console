{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2022"],
    "rootDir": "./src",
    "outDir": "./build",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "removeComments": true,

    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
